<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/color_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/doggo_detail_image"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/doggo_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/doggo_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Doggo"
        app:layout_constraintBottom_toTopOf="@id/doggo_life_span"
        app:layout_constraintTop_toBottomOf="@id/doggo_detail_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="sans-serif-condensed"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/doggo_life_span"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Life Span"
        app:layout_constraintTop_toBottomOf="@id/doggo_detail"
        app:layout_constraintBottom_toTopOf="@id/doggo_temperament"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/doggo_temperament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Temperament"
        app:layout_constraintTop_toBottomOf="@id/doggo_detail"
        app:layout_constraintBottom_toTopOf="@id/button_third"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/doggo_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Origin"
        app:layout_constraintTop_toBottomOf="@id/doggo_temperament"
        app:layout_constraintBottom_toTopOf="@id/button_third"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>