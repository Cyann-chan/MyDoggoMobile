<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/DoggoHome">

    <fragment
        android:id="@+id/DoggoHome"
        android:name="com.example.mydoggomobile.DoggoHome"
        android:label="Home"
        tools:layout="@layout/fragment_home_first">

        <action
            android:id="@+id/navigateFromHomeToList"
            app:destination="@id/DoggoList" />
    </fragment>
    <fragment
        android:id="@+id/DoggoList"
        android:name="com.example.mydoggomobile.SecondFragment"
        android:label="List"
        tools:layout="@layout/fragment_list_doggo">

        <action
            android:id="@+id/navigateFromListToHome"
            app:destination="@id/DoggoHome" />
    </fragment>
</navigation>